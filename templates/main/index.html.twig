{% extends 'base.html.twig' %}

{% block title %}Hello MainController!
{% endblock %}

{% block body %}

	{% for message in app.flashes('message') %}
		<div class="alert alert-success">
			{{message}}
		</div>
	{% endfor %}

<div>
<a href="{{ path('add-product') }}" class="btn btn-primary mt-4 md-4" >Add product</a>
</div>
	<table class="table">
		<thead>
			<tr>
				<th scope="col">No.</th>
				<th scope="col">Id</th>
				<th scope="col">Product Name</th>
				<th scope="col">Price</th>
				<th scope="col">Quntity</th>
				<th scope="col">Actions</th>

			</tr>
		</thead>
		<tbody>

			{% for product in products %}

				<tr>
					<th scope="row">{{loop.index}}</th>
					<td>{{product.id}}</td>
					<td>{{product.pname}}</td>
					<td>{{product.price}}</td>
					<td>{{product.quntity}}</td>
					<td>
						<a href="{{path('edit-product',{id: product.id})}}" class="btn btn-success">Edit</a>
						<a href="{{path('delete-product',{id: product.id})}}"  onclick="return confirm('Are you sure you want to delete this item?');"  class="btn btn-danger">Delete</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
